worker_processes auto;
daemon off;

pid <%= @pid %>;

events {
  worker_connections 1024;
  multi_accept on;
  use epoll;
}

http {
  include mime.types;
  default_type application/octet-stream;

  charset UTF-8;

  server_name_in_redirect off;
  server_tokens off;

  log_format elb_log '$remote_addr - $http_x_forwarded_for - '
                     '$remote_user [$time_local] '
                     '"$request" $status $body_bytes_sent "$http_referer" '
                     '"$http_user_agent"';
  access_log <%= @log_dir %>/access.log elb_log;
  error_log <%= @log_dir %>/error.log;

  sendfile on;

  tcp_nopush on;
  tcp_nodelay off;

  gzip on;
  gzip_http_version 1.1;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";
  gzip_vary on;
  gzip_min_length 256;
  gzip_buffers 4 16k;
  gzip_comp_level 4;
  gzip_proxied any;
  gzip_types text/plain text/css application/x-javascript text/xml application/xml text/javascript application/javascript application/json;

  include <%= @conf_dir -%>/conf.d/*.conf;
  include <%= @conf_dir -%>/sites-enabled/*;
}
