# <%= @instance %> Upstart script
# Generated by Chef for <%= @fqdn %>

description "Pushit Rails Application"

export PATH="<%= @env_path %>:$PATH"

start on (local-filesystems and runlevel [2345])
stop on runlevel [06]

respawn
console log

setuid root
setgid root

chdir <%= @app_path %>

<% @env.each do |key, value| -%>
env <%= key %>="<%= value %>"
<% end -%>

pre-start exec <%= @exec %> -D -E <%= @environment %> -c <%= @config_file %> >> <%= @log_path %> 2>&1

post-stop exec kill `cat <%= @pid_file %>`